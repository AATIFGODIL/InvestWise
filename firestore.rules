rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS collection rules
    match /users/{userId} {
      // Allow any authenticated user to read from the users collection.
      // This is necessary for features like the community leaderboard.
      allow read: if request.auth != null;

      // Allow users to create, update, or delete only their own document.
      // This prevents users from modifying other users' data.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // By default, deny access to all other collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
