
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, create, and update their OWN document.
    // They cannot delete their document or modify anyone else's.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Allow any authenticated user to LIST the users collection.
    // This is required for the community leaderboard feature.
    match /users/{document=**} {
      allow list: if request.auth != null;
    }
  }
}
