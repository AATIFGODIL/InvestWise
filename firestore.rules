
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow read access to any authenticated user for features like leaderboards.
      allow read: if request.auth != null;
      
      // Allow write access only to the user who owns the document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
