rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes to all documents
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to get, create, and update their own document.
      // Deletion is disallowed for data integrity.
      allow get, create, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow any authenticated user to list documents in the collection.
      // This is required for features like the Community Leaderboard.
      allow list: if request.auth != null;
    }
  }
}
