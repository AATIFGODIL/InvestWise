rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the 'users' collection
    match /users/{userId} {
      
      // Any authenticated user can read from the 'users' collection.
      // This is necessary for features like the community leaderboard.
      allow read: if request.auth != null;
      
      // Only the authenticated user can write to their own document.
      // This prevents users from modifying each other's data.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
