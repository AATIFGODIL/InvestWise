# InvestWise - A modern stock trading and investment education platform for young investors
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'profilePictures' directory
    match /profilePictures/{userId}/{allPaths=**} {
      // Allow read access to anyone (e.g., to display profile pictures)
      allow read;
      // Allow write access (create, update, delete) only if the user is authenticated
      // and their UID matches the {userId} in the path.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}